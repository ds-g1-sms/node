# Node 2 Specific Configuration
# ==============================================================================
# This file contains configuration specific to Node 2
# These settings override or supplement the main .env configuration
# ==============================================================================

# Node identification
NODE_ID=node2
NODE_NAME=ChatNode-02

# Network configuration
XMLRPC_HOST=0.0.0.0
XMLRPC_PORT=9090
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080

# This node's XML-RPC address (used by peers to contact this node)
XMLRPC_ADDRESS=http://node2:9090

# Peer nodes configuration
# Format: node_id:address,node_id:address
PEER_NODES=node1:http://node1:9090,node3:http://node3:9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/chatnode/node2.log

# Node-specific features
IS_COORDINATOR=false

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=9090

# Resource configuration
MAX_ROOMS=100
MAX_CLIENTS_PER_ROOM=50
MAX_MESSAGE_SIZE=10240

# Monitoring (optional)
METRICS_ENABLED=false
METRICS_PORT=9102
